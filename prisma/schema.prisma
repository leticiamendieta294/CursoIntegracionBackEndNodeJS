generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String @default("cambiar")

  //1:N hacia Reserva

  reserva Reserva[]

}

model Reserva {
 id Int @id @default(autoincrement())
 fecha DateTime @default(now()) //now significa que obtendra la fecha y hora actual.
 //tabla referenciada
 user User @relation(fields: [userId], references: [id]) //aqui en donde establece la relacion 
 userId Int
}



